<?xml version="1.0"?>
<robot name="tracked_bot_simple">

  <!-- 底盘 -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
      <material name="chassis_color">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- 左履带 -->
  <link name="left_track">
    <visual>
      <geometry>
        <box size="0.5 0.1 0.05"/>
      </geometry>
      <material name="track_color">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.1 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="left_track_joint" type="fixed">
    <parent link="base_link"/>
    <child link="left_track"/>
    <origin xyz="0 0.2 -0.025"/>
  </joint>

  <!-- 右履带 -->
  <link name="right_track">
    <visual>
      <geometry>
        <box size="0.5 0.1 0.05"/>
      </geometry>
      <material name="track_color">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.1 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="right_track_joint" type="fixed">
    <parent link="base_link"/>
    <child link="right_track"/>
    <origin xyz="0 -0.2 -0.025"/>
  </joint>

  <!-- 前左翻动器 -->
  <link name="front_left_flipper">
    <visual>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
      <material name="flipper_color">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link>

  <joint name="front_left_flipper_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_left_flipper"/>
    <origin xyz="0.25 0.175 0" rpy="0 -0.4 0"/>
  </joint>

  <!-- 前右翻动器 -->
  <link name="front_right_flipper">
    <visual>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
      <material name="flipper_color">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link>

  <joint name="front_right_flipper_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_right_flipper"/>
    <origin xyz="0.25 -0.175 0" rpy="0 -0.4 0"/>
  </joint>

  <!-- 后左翻动器 -->
  <link name="rear_left_flipper">
    <visual>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
      <material name="flipper_color">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link>

  <joint name="rear_left_flipper_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_left_flipper"/>
    <origin xyz="-0.25 0.175 0" rpy="0 0.4 0"/>
  </joint>

  <!-- 后右翻动器 -->
  <link name="rear_right_flipper">
    <visual>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
      <material name="flipper_color">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link>

  <joint name="rear_right_flipper_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_right_flipper"/>
    <origin xyz="-0.25 -0.175 0" rpy="0 0.4 0"/>
  </joint>

  <!-- 上部设备箱 -->
  <link name="device_box">
    <visual>
      <geometry>
        <box size="0.3 0.2 0.1"/>
      </geometry>
      <material name="box_color">
        <color rgba="0.4 0.4 0.4 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.2 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="device_box_joint" type="fixed">
    <parent link="base_link"/>
    <child link="device_box"/>
    <origin xyz="0 0 0.1"/>
  </joint>

  <!-- Gazebo插件 -->
  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <left_joint>left_track_joint</left_joint>
      <right_joint>right_track_joint</right_joint>
      <wheel_separation>0.4</wheel_separation>
      <wheel_diameter>0.1</wheel_diameter>
      <max_wheel_torque>20</max_wheel_torque>
      <max_wheel_acceleration>1.0</max_wheel_acceleration>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
    </plugin>
  </gazebo>

  <!-- 为所有链接添加材质 -->
  <gazebo reference="base_link">
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="left_track">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="right_track">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="front_left_flipper">
    <material>Gazebo/DarkGrey</material>
  </gazebo>

  <gazebo reference="front_right_flipper">
    <material>Gazebo/DarkGrey</material>
  </gazebo>

  <gazebo reference="rear_left_flipper">
    <material>Gazebo/DarkGrey</material>
  </gazebo>

  <gazebo reference="rear_right_flipper">
    <material>Gazebo/DarkGrey</material>
  </gazebo>

  <gazebo reference="device_box">
    <material>Gazebo/DarkGrey</material>
  </gazebo>

</robot> 